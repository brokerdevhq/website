@page
@model ResourcesIndexModel
@{
    ViewData["Title"] = "Resources - BrokerDev";
    ViewData["Description"] = "News, guides, and insights about bridging legacy insurance systems with modern AI.";
}

<section class="hero resources-hero">
  <div class="container">
    <h1>Resources</h1>
    <p class="hero-subtitle">News, guides, and insights about modernizing your BMS</p>
  </div>
</section>

<section class="resources-list">
  <div class="container">
    <div class="resources-filter">
      <a href="/resources" class="filter-btn @(Model.SelectedCategory == "all" ? "active" : "")">All</a>
      @foreach (var category in Model.Categories)
      {
        <a href="/resources?category=@category.Id"
           class="filter-btn @(Model.SelectedCategory == category.Id ? "active" : "")"
           title="@category.Description">@category.Name</a>
      }
    </div>

    <div class="resources-grid">
      @foreach (var article in Model.Articles)
      {
        <article class="resource-card">
          <div class="resource-meta">
            @foreach (var category in article.Categories)
            {
              <span class="resource-category">@category</span>
            }
            <span class="resource-date">@article.PublishDate?.ToString("MMM d, yyyy")</span>
          </div>
          <h2><a href="/resources/@article.Slug">@article.Title</a></h2>
          <p>@article.Summary</p>
          <a href="/resources/@article.Slug" class="read-more">Read more â†’</a>
        </article>
      }
    </div>
  </div>
</section>

<script type="application/ld+json">
{
    "@@context": "https://schema.org",
    "@@type": "BreadcrumbList",
    "itemListElement": [
        {
            "@@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://brokerdev.ca"
        },
        {
            "@@type": "ListItem",
            "position": 2,
            "name": "Resources",
            "item": "https://brokerdev.ca/resources"
        }
    ]
}
</script>
