@page "/resources/{slug}"
@model ArticleModel
@{
    ViewData["Title"] = Model.Article?.Title ?? "Article Not Found";
    ViewData["Description"] = Model.Article?.Summary ?? "";
}

@if (Model.Article == null)
{
    <section class="hero">
        <div class="container">
            <h1>Article Not Found</h1>
            <p>Sorry, we couldn't find that article.</p>
            <a href="/resources" class="button primary">Back to Resources</a>
        </div>
    </section>
}
else
{
    <article class="article-page">
        <div class="container article-container">
            <div class="article-header">
                <div class="article-meta">
                    @foreach (var category in Model.Article.Categories)
                    {
                        <span class="resource-category">@category</span>
                    }
                    <span class="resource-date">@Model.Article.PublishDate?.ToString("MMMM d, yyyy")</span>
                    <span class="resource-author">By @Model.Article.Author</span>
                    <span class="resource-reading-time">@Model.Article.ReadingTimeMinutes min read</span>
                </div>
                <h1>@Model.Article.Title</h1>
                <p class="article-summary">@Model.Article.Summary</p>
            </div>

            <div class="article-content">
                @Html.Raw(Model.ArticleContentHtml)
            </div>

            <div class="article-footer">
                <a href="/resources" class="button secondary">‚Üê Back to Resources</a>
            </div>
        </div>
    </article>

    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Article",
        "headline": "@Model.Article.Title",
        "description": "@Model.Article.Summary",
        "datePublished": "@Model.Article.PublishDate?.ToString("yyyy-MM-dd")",
        "author": {
            "@@type": "Person",
            "name": "@Model.Article.Author"
        },
        "publisher": {
            "@@type": "Organization",
            "name": "BrokerDev",
            "url": "https://brokerdev.ca"
        },
        "mainEntityOfPage": {
            "@@type": "WebPage",
            "@@id": "https://brokerdev.ca/resources/@Model.Article.Slug"
        },
        "articleSection": "@string.Join(", ", Model.Article.Categories)"
    }
    </script>

    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@@type": "ListItem",
                "position": 1,
                "name": "Home",
                "item": "https://brokerdev.ca"
            },
            {
                "@@type": "ListItem",
                "position": 2,
                "name": "Resources",
                "item": "https://brokerdev.ca/resources"
            },
            {
                "@@type": "ListItem",
                "position": 3,
                "name": "@Model.Article.Title",
                "item": "https://brokerdev.ca/resources/@Model.Article.Slug"
            }
        ]
    }
    </script>
}
