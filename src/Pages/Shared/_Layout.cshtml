@using BrokerDevWebsite.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData[ViewDataKeys.Title]</title>
    <meta name="description" content="@ViewData[ViewDataKeys.Description]" />

    <!-- Canonical URL -->
    <link rel="canonical" href="@(ViewData[ViewDataKeys.CanonicalUrl] ?? $"https://brokerdev.ca{Context.Request.Path}")" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="@(ViewData[ViewDataKeys.OgType] ?? "website")" />
    <meta property="og:url" content="@(ViewData[ViewDataKeys.CanonicalUrl] ?? $"https://brokerdev.ca{Context.Request.Path}")" />
    <meta property="og:title" content="@ViewData[ViewDataKeys.Title]" />
    <meta property="og:description" content="@ViewData[ViewDataKeys.Description]" />
    <meta property="og:image" content="@(ViewData[ViewDataKeys.OgImage] ?? "https://brokerdev.ca/images/og-default.png")" />
    <meta property="og:site_name" content="BrokerDev" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="@(ViewData[ViewDataKeys.CanonicalUrl] ?? $"https://brokerdev.ca{Context.Request.Path}")" />
    <meta name="twitter:title" content="@ViewData[ViewDataKeys.Title]" />
    <meta name="twitter:description" content="@ViewData[ViewDataKeys.Description]" />
    <meta name="twitter:image" content="@(ViewData[ViewDataKeys.OgImage] ?? "https://brokerdev.ca/images/og-default.png")" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BrokerDevWebsite.styles.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true" defer></script>
</head>
<body>
    <header class="navbar">
        <div class="container">
            <nav class="nav-container">
                <a href="/" class="logo">BrokerDev</a>
                <ul class="nav-menu">
                    <li class="nav-item-mobile-hidden"><a href="/">Home</a></li>
                    <li class="nav-item-tablet-hidden"><a href="/about">About</a></li>
                    <li class="nav-item-mobile-hidden"><a href="/resources">Resources</a></li>
                    <li><a href="/contact" class="nav-cta">Contact</a></li>
                    <li>
                        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
                            <svg class="sun-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M10 15C12.7614 15 15 12.7614 15 10C15 7.23858 12.7614 5 10 5C7.23858 5 5 7.23858 5 10C5 12.7614 7.23858 15 10 15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M10 1V3M10 17V19M19 10H17M3 10H1M16.95 16.95L15.536 15.536M4.464 4.464L3.05 3.05M16.95 3.05L15.536 4.464M4.464 15.536L3.05 16.95" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            <svg class="moon-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>BrokerDev</h3>
                    <p>Bridging legacy insurance systems with modern AI</p>
                </div>
                <div class="footer-section">
                    <h4>Product</h4>
                    <ul>
                        <li><a href="/about">About</a></li>
                        <li><a href="/contact">Contact</a></li>
                        <li><a href="/resources">Resources</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contact</h4>
                    <p>Email: <a href="mailto:info@brokerdev.ca">info@brokerdev.ca</a></p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year BrokerDev. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
